{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es2020": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {},
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-console": "off",
    "quotes": ["error", "double"],
    "space-before-blocks": [
      "warn",
      {
        "keywords": "always",
        "functions": "always",
        "classes": "always"
      }
    ]
  }
}
